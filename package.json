{
  "name": "share-timer",
  "version": "1.0.0",
  "description": "Simple, relaxing timer application with web push notifications",
  "scripts": {
    "dev": "next dev --port 3009",
    "build": "next build",
    "start": "next start --port 3009",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings=0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "e2e": "playwright test",
    "e2e:desktop": "playwright test --project=\"Desktop Chrome\"",
    "e2e:tablet": "playwright test --project=\"Tablet Safari\"",
    "e2e:mobile": "playwright test --project=\"Mobile Chrome\"",
    "prepare": "husky",
    "prettier": "prettier --ignore-unknown --write ."
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.546.0",
    "next": "^16.0.0",
    "next-intl": "^4.3.12",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.15",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.11.0",
    "eslint": "^9.38.0",
    "eslint-config-next": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.15",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.17.1",
  "volta": {
    "node": "22.20.0"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write"
  }
}
